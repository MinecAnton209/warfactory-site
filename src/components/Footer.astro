---
import { Icon } from 'astro-icon/components';
import HeartRain from './HeartRain.astro';
---

<footer class="relative z-10 w-full py-12 border-t border-white/5 bg-black/40 backdrop-blur-md mt-auto">
    <div class="max-w-7xl mx-auto px-8 flex flex-col md:flex-row justify-between items-center gap-8">

        <div class="space-y-2 text-center md:text-left order-1">
            <div class="text-sm font-black uppercase tracking-tighter italic">
                WAR<span class="text-red-600">FACTORY</span>
            </div>
            <p class="text-[9px] text-gray-500 uppercase tracking-[0.4em] opacity-50">
                &copy; 2026
            </p>
        </div>

        <div class="flex flex-col items-center gap-1 order-3 md:order-2">
            <div class="text-[10px] font-bold uppercase tracking-[0.2em] text-gray-400">
                Built by <span class="text-white">Astro</span>
            </div>
            <HeartRain /> </div>

        <div class="flex flex-col items-center md:items-end gap-4 order-2 md:order-3">
            <div class="flex gap-8 items-center">
                <a href="https://github.com/Warfactory-Official/" target="_blank" class="text-gray-500 hover:text-white transition-colors">
                    <Icon name="lucide:github" class="w-4 h-4" />
                </a>
                <a href="https://www.youtube.com/@WarfactoryOffical" target="_blank" class="text-gray-500 hover:text-red-600 transition-colors">
                    <Icon name="lucide:youtube" class="w-4 h-4" />
                </a>
                <a href="https://discord.gg/warfactory" target="_blank" class="text-gray-500 hover:text-[#5865F2] transition-colors">
                    <Icon name="lucide:message-square" class="w-4 h-4" />
                </a>
            </div>
        </div>
    </div>
</footer>